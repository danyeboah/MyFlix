%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h1.lead Sign in
        %hr.hr1

        =bootstrap_form_tag url: login_path, method: 'post', layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-3" do |f|
          =f.email_field :email, label: "E-mail:", icon: "envelope"
          =f.password_field :password, label: "Password"
          =f.form_group :remember_me do
            = f.check_box :remember_me, label: "Remember Me"
          =f.submit "Sign In", class: 'btn btn-success col-sm-offset-2'